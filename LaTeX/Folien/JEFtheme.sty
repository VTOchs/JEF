% mycustomtheme.sty
\ProvidesPackage{JEFtheme}
\mode<presentation>

% Colors
\definecolor{mybackground}{RGB}{255,255,255} % White background
\definecolor{primarycolor}{RGB}{0,181,53} % Green
\definecolor{secondarycolor}{RGB}{156,154,153} % Gray

\setbeamercolor{background canvas}{bg=mybackground}
\setbeamercolor{normal text}{bg=mybackground, fg=black} % Black text color
\setbeamercolor{structure}{fg=primarycolor} % Green structure color
\setbeamercolor{alerted text}{fg=secondarycolor} % Gray alerted text color

% Include the graphicx and tikz packages
\usepackage{graphicx}
\usepackage{tikz}

% Define the logos
\newcommand{\jeflogo}{\includegraphics[height=1cm]{../Logos/jef.png}}
\newcommand{\simeplogo}{\includegraphics[height=1.5cm]{../Logos/simep.png}}
\newcommand{\financelogo}{\includegraphics[height=1.5cm]{../Logos/finance.png}}
\newcommand{\citylogo}{\includegraphics[width=3.5cm]{../Logos/\city .png}}
%\newcommand{\citylogo}{\includegraphics[width=1.5cm]{Logos/\city .png}}


% Title Page Template with logos using TikZ
\defbeamertemplate*{title page}{mycustomtheme}{
   \begin{tikzpicture}[remember picture, overlay]
      \node at (current page.south) [anchor=south] {\includegraphics[height=2.5cm]{Bilder/\Fraktion.png}};
      \node at (current page.north west) [anchor=north west,yshift=-0.2cm] {\jeflogo};
      \node at (current page.north east) [anchor=north east] {\simeplogo};
      \node at (current page.south west) [anchor=south west, yshift=0.2cm] {\financelogo};
      \node at (current page.south east) [anchor=south east, yshift=0.2cm] {\citylogo};

   \end{tikzpicture}

   
   \begin{center}
       \vspace{0.5cm}
      {\usebeamerfont{title}\usebeamercolor[fg]{title}\huge\inserttitle\par}
      \vspace{0.5cm}
      {\usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\Large\insertsubtitle\par}
      \vspace{0.5cm}
%      {\usebeamerfont{author}\usebeamercolor[fg]{author}\footnotesize\insertauthor\par}
%      \vspace{0.5cm}
      {\usebeamerfont{date}\usebeamercolor[fg]{date}\scriptsize\insertdate\par}
      \vspace{1cm}
   \end{center}
}


% Slide Content Template with logos using TikZ
\defbeamertemplate*{frametitle}{mycustomtheme}{

   % Add logos to the upper corners of each slide using TikZ
   \begin{tikzpicture}[remember picture, overlay]
      \node at (current page.north west) [anchor=north west,yshift=-0.2cm] {\jeflogo};
      \node at (current page.north east) [anchor=north east] {\simeplogo};
   \end{tikzpicture}

   \vspace{1.7cm}
   \begin{beamercolorbox}[sep=0.3cm,ht=2.25ex,dp=1ex]{frametitle}
      \usebeamerfont{frametitle}\insertframetitle
   \end{beamercolorbox}   
}